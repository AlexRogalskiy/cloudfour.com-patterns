<script>
  var messageField = document.getElementById('commentform-message');
  var rows = messageField.getAttribute('rows') || 2;
  var minRows = rows;
  var content = messageField.innerHTML;

  function growField () {
    while (messageField.scrollHeight > messageField.clientHeight) {
      rows += 1;
      messageField.setAttribute('rows', rows);
    }
  }

  function shrinkField () {
    rows = minRows;
    messageField.setAttribute('rows', rows);
    growField();
  }

  messageField.addEventListener('input', function (event) {
    if (messageField.innerHTML.length > content.length) {
      growField();
    } else {
      shrinkField();
    }

    content = messageField.innerHTML;
  });
</script>
