      {{summary}}
    </p>
    <button class="Button Button--primary u-spaceTop2">
      Read more
      {{{
      embed "patterns.components.icon.base"
      iconid="arrow-right"
      role="presentation"
      }}}
    </button>
    </div>
  </div>
  <hr>
{{/each}}

