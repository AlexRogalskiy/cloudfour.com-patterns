<div class="drizzle-Layout-nav drizzle-Nav" id="nav">
  <div class="drizzle-Nav-header">
    <a href="/">
      {{> drizzle.logo}}
    </a>
    <a class="drizzle-Nav-header-toggle" href="#nav">
      <svg viewBox="-1 -1 12 7" width="16" height="16">
        <polyline fill="none" stroke="currentColor" stroke-width="2" points="0 0 5 5 10 0"/>
      </svg>
    </a>
  </div>
  <div class="drizzle-Nav-main" id="nav-menu">
    <ul class="drizzle-Nav-menu">
      {{!-- Top-level pages --}}
      <li>
        <a class="drizzle-Nav-item" href="/">
          Overview
        </a>
      </li>
      <li>
        <a class="drizzle-Nav-item" href="/timeline.html">
          Timeline
        </a>
      </li>
      {{!-- Top-level patterns --}}
      {{#each drizzle.patterns}}
        {{#if collection}}
          <li>
            <a class="drizzle-Nav-item"
             href="/patterns/{{@key}}.html">
              {{collection.name}}
            </a>
          </li>
        {{/if}}
      {{/each}}
      {{!-- Sandbox page --}}
      <li>
        <a class="drizzle-Nav-item" href="/sandbox">
          Sandbox
        </a>
      </li>
    </ul>
    <h5 class="drizzle-Nav-item">Components</h5>
    <ul class="drizzle-Nav-menu">
      {{!-- Component patterns --}}
      {{#each drizzle.patterns.components}}
        <li>
          <a class="drizzle-Nav-item"
           href="/patterns/components/{{@key}}.html">
            {{collection.name}}
          </a>
        </li>
      {{/each}}
    </ul>
    <h5 class="drizzle-Nav-item">Combos</h5>
    <ul class="drizzle-Nav-menu">
      {{!-- Component patterns --}}
      {{#each drizzle.patterns.combos}}
        <li>
          <a class="drizzle-Nav-item"
           href="/patterns/combos/{{@key}}.html">
            {{collection.name}}
          </a>
        </li>
      {{/each}}
    </ul>
    <div class="drizzle-Nav-footer">
      {{timestamp format="MMM D, YYYY"}} &#183; {{timestamp format="h:mma"}}
    </div>
  </div>
</div>
